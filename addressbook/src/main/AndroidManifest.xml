<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vc.min.ryan.addressbook" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-permission android:name="android.permission.CALL_PHONE" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".EditActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".PersonActivity"
            android:label="Person">
        </activity>
        <provider
            android:authorities="vc.min.ryan.addressbook.Contacts"
            android:name="PersonContentProvider">
            <uses-permission android:name="vc.min.ryan.addressbook.READ_CONTACTS"/>
            <uses-permission android:name="vc.min.ryan.addressbook.WRITE_CONTACTS"/>
            </provider>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>
